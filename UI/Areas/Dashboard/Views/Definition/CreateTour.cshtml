@model Tour
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<div class="card col-lg-6 mx-auto">
    <div class="card-header">
        <div class="row">
            <div class="col-md-9">
                <h4>Create Tour</h4>
            </div>
            <div class="col-md-3 text-right">
                <a href="@TempData["referer"]" data-toggle="tooltip" title="Go Back" data-placement="bottom">
                    <i class="fas fa-arrow-left fa-2x text-muted"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <form asp-action="CreateTour" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="TourCode"></label>
                <input asp-for="TourCode" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TourName"></label>
                <input asp-for="TourName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Region"></label>
                @Html.DropDownListFor(x => x.RegionId, ViewBag.Regions as SelectList, "Please Choose", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="TourOperator"></label>
                @Html.DropDownListFor(x => x.TourOperatorId, ViewBag.TourOperators as SelectList, "Please Choose", new { @class = "form-control" })
            </div>
            <div class="col-lg-12">
                <button type="submit" class="btn btn-outline-primary mt-2 ">Create</button>
            </div>
        </form>
    </div>
</div>

