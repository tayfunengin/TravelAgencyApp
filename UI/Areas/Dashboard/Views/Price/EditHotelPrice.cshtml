@model HotelPrice 
@{
        Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<div class="card col-lg-9 mx-auto">
    <div class="card-header">
        <div class="row">
            <div class="col-md-9">
                <h4>Edit HotelPrice</h4>
            </div>
            <div class="col-md-3 text-right">
                <a href="/Dashboard/Seller/HotelDetails/@Model.HotelId" data-toggle="tooltip" title="Go Back" data-placement="bottom">
                    <i class="fas fa-arrow-left fa-2x text-muted"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <form asp-action="EditHotelPrice" method="post" asp-route-hotelId="@Model.HotelId">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="AddedDate" />
            
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-4">
                        <span asp-validation-for="RoomLocationId" class="text-danger"></span>
                        <label>Room Location</label>
                    </div>
                    <div class="col-lg-8">
                        <select id="dropDownListRoomLocation" asp-for="RoomLocationId" disabled asp-items="@TempData["roomLocations"] as SelectList" class="form-control">                           
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-4">
                        <span asp-validation-for="RoomTypeId" class="text-danger"></span>
                        <label>Room Type</label>
                    </div>
                    <div class="col-lg-8">
                        <select id="dropDownListRoomType" asp-for="RoomTypeId" disabled asp-items="@TempData["roomTypes"] as SelectList" class="form-control">                           
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-4">
                        <span asp-validation-for="AccomodationTypeId" class="text-danger"></span>
                        <label>Accomodation Type</label>
                    </div>
                    <div class="col-8">
                        <select id="dropDownListAccomodationType" asp-for="AccomodationTypeId" disabled asp-items="@TempData["accomodationTypes"] as SelectList" class="form-control">                       
                        </select>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-lg-6">
                    <span asp-validation-for="Year" class="text-danger"></span>
                    <label asp-for="Year"></label>
                    <input asp-for="Year" type="number" readonly min="0" class="form-control" />
                </div>
                <div class="form-group col-lg-6">
                    <span asp-validation-for="Period" class="text-danger"></span>
                    <label asp-for="Period"></label>
                    <select asp-for="Period" asp-items="Html.GetEnumSelectList<Domain.Enums.Period>()" disabled class="form-control">
                        <option selected="selected" value="">Please Choose</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-lg-6">
                    <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                    <label asp-for="PurchasePrice"></label>
                    <input asp-for="PurchasePrice" type="number" min="0" class="form-control" />
                </div>
                <div class="form-group col-lg-6">
                    <span asp-validation-for="SalePrice" class="text-danger"></span>
                    <label asp-for="SalePrice"></label>
                    <input asp-for="SalePrice" type="number" min="0" class="form-control" />
                </div>
            </div>

            <div class="form-group col-lg-6">
                <label asp-for="Status">Active</label>
                <input asp-for="Status" type="checkbox" class="ml-2" />
            </div>
            <div class="col-lg-12">
                <button type="submit" class="btn btn-outline-success mt-2 ">Update</button>
            </div>
        </form>
    </div>
</div>


