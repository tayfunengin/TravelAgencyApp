@model RentACarPrice
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<div class="card col-lg-9 mx-auto">
    <div class="card-header">
        <div class="row">
            <div class="col-md-9">
                <h4>Edit Rent A Car Price</h4>
            </div>
            <div class="col-md-3 text-right">
                <a href="/Dashboard/Seller/RentACarCompanyDetails/@Model.RentACarCompanyId" data-toggle="tooltip" title="Go Back" data-placement="bottom">
                    <i class="fas fa-arrow-left fa-2x text-muted"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <form asp-action="EditRentACarPrice" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="AddedDate" />

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-4">
                        <span asp-validation-for="CarId" class="text-danger"></span>
                        <label>Car</label>
                    </div>
                    <div class="col-lg-8">
                        <select id="dropDownListCar" asp-for="CarId"  disabled asp-items="@TempData["cars"] as SelectList" class="form-control">
                            <option selected="selected" value="">Please Choose</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-lg-6">
                    <span asp-validation-for="Year" class="text-danger"></span>
                    <label asp-for="Year"></label>
                    <input asp-for="Year" type="number" readonly min="0" class="form-control" />
                </div>
                <div class="form-group col-lg-6">
                    <span asp-validation-for="Period" class="text-danger"></span>
                    <label asp-for="Period"></label>
                    <select asp-for="Period"  readonly asp-items="Html.GetEnumSelectList<Domain.Enums.Period>()" class="form-control">
                        <option selected="selected" value="">Please Choose</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-lg-6">
                    <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                    <label asp-for="PurchasePrice"></label>
                    <input asp-for="PurchasePrice" type="number" min="0" class="form-control" />
                </div>
                <div class="form-group col-lg-6">
                    <span asp-validation-for="SalePrice" class="text-danger"></span>
                    <label asp-for="SalePrice"></label>
                    <input asp-for="SalePrice" type="number" min="0" class="form-control" />
                </div>
            </div>

            <div class="form-group col-lg-6">
                <label asp-for="Status">Active</label>
                <input asp-for="Status" type="checkbox" class="ml-2" />
            </div>
            <div class="col-lg-12">
                <button type="submit" class="btn btn-outline-success mt-2 ">Update</button>
            </div>
        </form>
    </div>
</div>

