@model Photography
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    Hotel hotelEntity = TempData["hotelForPhoto"] as Hotel;
}

<div class="row" style=" margin-top:75px;">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-6">
                        <h3>Add Photography</h3>
                    </div>
                    <div class="col-6 text-right">
                        <a href="@TempData["referer"]" data-toggle="tooltip" title="Go Back" data-placement="bottom" class="back">
                            <i class="fas fa-arrow-left fa-2x text-muted"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">

                <form asp-action="AddPhotoToHotel" asp-controller="Seller" method="post" enctype="multipart/form-data" asp-route-id="@hotelEntity.Id">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3">
                                <label asp-for="Title"></label>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="Title" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Photo</label>
                        <input type="file" name="formFile" />
                    </div>
                    <div class="text-right">
                        <button type="submit" class="btn btn-primary ">Add</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
