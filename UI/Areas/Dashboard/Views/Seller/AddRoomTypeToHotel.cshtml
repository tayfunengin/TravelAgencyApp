@model Hotel 
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<div class="card col-lg-8 mx-auto">
    <div class="card-header">
        <div class="row">
            <div class="col-md-9">
                <h4>Add Room Type to @Model.HotelName</h4>
            </div>
            <div class="col-md-3 text-right">
                <a href="@TempData["referer"]" data-toggle="tooltip" title="Go Back" data-placement="bottom">
                    <i class="fas fa-arrow-left fa-2x text-muted"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <form asp-action="AddRoomTypeToHotel" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-4">
                        <label>Room Types</label>
                    </div>
                    <div class="col-lg-8">
                        <select id="dropDownList" name="selectedIds" asp-items="@TempData["roomTypes"] as SelectList" multiple class="form-control">
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <button type="submit" class="btn btn-outline-primary mt-2 ">Add</button>
            </div>
        </form>
    </div>
</div>

@section scripts{

    <script>
        $(document).ready(function () {
            $('#dropDownList').multiselect();
            sessionStorage.setItem("parentid", "Sellers");
            sessionStorage.setItem("id", "Hotel");
        });
    </script>

}

