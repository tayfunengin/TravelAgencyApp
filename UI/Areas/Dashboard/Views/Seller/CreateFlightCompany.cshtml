@model FlightCompany
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<div class="card col-lg-9 mx-auto">
    <div class="card-header">
        <div class="row">
            <div class="col-md-9">
                <h4>Create Flight Company</h4>
            </div>
            <div class="col-md-3 text-right">
                <a href="@TempData["referer"]" data-toggle="tooltip" title="Go Back" data-placement="bottom">
                    <i class="fas fa-arrow-left fa-2x text-muted"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <form asp-action="CreateFlightCompany" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group col-lg-6">
                <label asp-for="FlightCompanyCode"></label>
                <input asp-for="FlightCompanyCode" class="form-control" />
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="FlightCompanyName"></label>
                <input asp-for="FlightCompanyName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-4">
                        <label>Regions</label>
                    </div>
                    <div class="col-lg-8">
                        <select id="dropDownListRegion" name="regionIds" asp-items="@TempData["regions"] as SelectList" multiple class="form-control">
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-4">
                        <label>Planes</label>
                    </div>
                    <div class="col-lg-8">
                        <select id="dropDownListPlane" name="planeIds" asp-items="@TempData["planes"] as SelectList" multiple class="form-control">
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-4">
                        <label>Routes</label>
                    </div>
                    <div class="col-lg-8">
                        <select id="dropDownListRoute" name="routeIds" asp-items="@TempData["routes"] as SelectList" multiple class="form-control">
                        </select>
                    </div>
                </div>
            </div>

            <div class="col-lg-12">
                <button type="submit" class="btn btn-outline-primary mt-2 ">Create</button>
            </div>
        </form>
    </div>
</div>


@section scripts{

    <script>
        $(document).ready(function () {
            $('#dropDownListRegion').multiselect();
            $('#dropDownListPlane').multiselect();
            $('#dropDownListRoute').multiselect();            
        });
    </script>

}