@model RentACarCompany
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<div class="card col-lg-9 mx-auto">
    <div class="card-header">
        <div class="row">
            <div class="col-md-9">
                <h4>Create Rent A Car</h4>
            </div>
            <div class="col-md-3 text-right">
                <a href="@TempData["referer"]" data-toggle="tooltip" title="Go Back" data-placement="bottom">
                    <i class="fas fa-arrow-left fa-2x text-muted"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <form asp-action="CreateRentACarCompany" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group col-lg-6">
                <label asp-for="RentACarCompanyCode"></label>
                <input asp-for="RentACarCompanyCode" class="form-control" />
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="RentACarCompanyName"></label>
                <input asp-for="RentACarCompanyName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <label>Cars:</label>
                <select id="dropDownListCar" name="carIds" asp-items="@TempData["cars"] as SelectList" multiple class="form-control">
                </select>
            </div>
    <div class="col-lg-12">
        <button type="submit" class="btn btn-outline-primary mt-2 ">Create</button>
    </div>
    </form>
</div>
</div>

@section scripts{

    <script>
        $(document).ready(function () {
            $('#dropDownListCar').multiselect();
        });
    </script>

}

