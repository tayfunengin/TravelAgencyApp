@model TourGuide
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<div class="card col-lg-9 mx-auto">
    <div class="card-header">
        <div class="row">
            <div class="col-md-9">
                <h4>Create Tour Guide</h4>
            </div>
            <div class="col-md-3 text-right">
                <a href="@TempData["referer"]" data-toggle="tooltip" title="Go Back" data-placement="bottom">
                    <i class="fas fa-arrow-left fa-2x text-muted"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <form asp-action="CreateTourGuide" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group col-lg-6">
                <label asp-for="TourGuideCode"></label>
                <input asp-for="TourGuideCode" class="form-control" />
            </div>
            <div class="row">
                <div class="form-group col-lg-6">
                    <label asp-for="TourGuideName"></label>
                    <input asp-for="TourGuideName" class="form-control" />
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="TourGuideSurname"></label>
                    <input asp-for="TourGuideSurname" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="row">
                <div class="form-group col-lg-6">
                    <label asp-for="Region"></label>
                    @Html.DropDownListFor(x => x.RegionId, TempData["regions"] as SelectList, "Please Choose", new { @class = "form-control" })
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Language"></label>
                    <select asp-for="Language" asp-items="Html.GetEnumSelectList<Domain.Enums.Language>()" class="form-control">
                        <option selected="selected" value="">Please Choose</option>
                    </select>
                </div>
            </div>
           
            <div class="col-lg-12">
                <button type="submit" class="btn btn-outline-primary mt-2 ">Create</button>
            </div>
        </form>
    </div>
</div>

