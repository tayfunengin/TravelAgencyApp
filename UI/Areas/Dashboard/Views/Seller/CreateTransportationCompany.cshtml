@model TransportationCompany 
@{  
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<div class="card col-lg-9 mx-auto">
    <div class="card-header">
        <div class="row">
            <div class="col-md-9">
                <h4>Create Transportation Company</h4>
            </div>
            <div class="col-md-3 text-right">
                <a href="@TempData["referer"]" data-toggle="tooltip" title="Go Back" data-placement="bottom">
                    <i class="fas fa-arrow-left fa-2x text-muted"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <form asp-action="CreateTransportationCompany" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group col-lg-6">
                <label asp-for="TransportaionCompanyCode"></label>
                <input asp-for="TransportaionCompanyCode" class="form-control" />
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="TransportationCompanyName"></label>
                <input asp-for="TransportationCompanyName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-4">
                        <label>Routes</label>
                    </div>
                    <div class="col-lg-8">
                        <select id="dropDownListRoute" name="routeIds" asp-items="@TempData["routes"] as SelectList" multiple class="form-control">
                        </select>
                    </div>                    
                </div>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Region"></label>
                @Html.DropDownListFor(x => x.RegionId, TempData["regions"] as SelectList, "Please Choose", new { @class = "form-control" })
            </div>
            <div class="col-lg-12">
                <button type="submit" class="btn btn-outline-primary mt-2 ">Create</button>
            </div>
        </form>
    </div>
</div>

@section scripts{

    <script>
        $(document).ready(function () {
            $('#dropDownListRoute').multiselect();        
        });
    </script>

}

