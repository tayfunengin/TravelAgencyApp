@model UserAndRoleVM
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<div class="card col-lg-9 mx-auto">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <h4>Update User</h4>
            </div>
            <div class="col-md-6 text-right">
                <a asp-action="Index" asp-controller="User" class="btn btn-light">Back To List</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-6">

                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" type="email" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Role"></label>
                        @Html.DropDownListFor(x => x.Role, TempData["roles"] as SelectList, "Please Choose" ,new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-outline-success mt-2 ">Update User</button>
                </div>

            </div>
        </form>
    </div>
</div>
