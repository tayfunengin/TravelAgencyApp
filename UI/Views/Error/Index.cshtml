@model Exception
@{
    ViewData["Title"] = "Hata";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h5>An error has occurred!</h5>
    </div>
    <div class="card-body">
        <div class="alert alert-danger">
            @Model.Message
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Index" asp-controller="Home" asp-area="" class="btn btn-default">Return Home Page</a>
    </div>
</div>


